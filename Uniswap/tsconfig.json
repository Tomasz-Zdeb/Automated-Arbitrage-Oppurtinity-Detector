{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",    
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true, 
  },
  "include": ["src/*", "src/utilities/tokens.ts", "src/utilities/configProvider.ts"],
  "exclude": ["node_modules"] 
}
